.form
  = form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f|
    .form-group.email_txt
      .input-group
        .input-group-addon
          i.fa.fa-at
        = f.email_field :email, autofocus: true, id: 'remail', class: 'form-control', placeholder: 'Email'
    .error
    .form-group.password_txt
      .input-group
        .input-group-addon
          i.fa.fa-lock
        = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password'
    .error
    .form-group.password_confirmation_txt
      .input-group
        .input-group-addon
          i.fa.fa-lock
        = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm Password' 
    .error  
    = f.submit 'Sign up', id: 'register_btn', class: 'btn-block btn btn-primary'
  .clearfix
  .login-modal-footer
    .row
      .col-xs-8.col-sm-8.col-md-8
        i.fa.fa-lock
        = link_to 'Forget Password', new_user_password_path, remote: true
      .col-xs-4.col-sm-4.col-md-4
        i.fa.fa-check
        = link_to 'Sign In', new_user_session_path, remote: true